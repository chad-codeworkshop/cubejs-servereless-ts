{
  "compilerOptions": {
    "lib": ["es6", "es2019"],
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": ".out",
    "strict": true,
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,

    "allowJs": true,

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "pretty": true
  },
  "include": ["src/**/*", "src/**/*.json"]
}
